<div class="photo-content">
<h2>Photo content</h2>

<img style="border:1px solid gray;width:500px;" src='<%= photo.photo_url %>'>

<h4>Caption:</h4>
<%= photo.caption %>

<h4>Owner:</h4>
<%= user.username %>
</div>





<div class="photo-comment">

<div class="detailBox">
    <div class="titleBox">
      <label>Comment Box</label>
    </div>
    <div class="actionBox">
      <% if(typeof comments != 'undefined'){ %>
        <ul class="commentList">
            <% for(var i=0; i<comments.length; i++) { %>
            <li>
                <div class="commentUser">
                    <%= comments[i].user_id.username %>:
                </div>
                <br>
                <div class="commentText">
                    <%= comments[i].comment_content %>
                </div>
            </li>
          <% } %>
        </ul>
      <% } %>

        <form method="POST" action="/view-edit-photo/:photo_id">
          <input class="form-control" type="hidden" name="photo_id" id="photo_id" value="<%=photo._id %>" >
            <div class="form-group">
              <textarea class="form-control" name="comment_content" rows="4" cols="50"></textarea>
            </div>
            <div class="form-group" id="addBtn">
                <input class="btn btn-default" type="submit" value="Add">
            </div>
        </form>

    </div>
</div>
</div>
